{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": { 
    "layout": {
      "contentSize": "1183px",
      "wideSize": "1183px"
    },

    "color": {
      "palette": [
        {
          "slug": "leonsTheme-black",
          "color": "#21130d",
          "name": "black"
        },
        {
          "slug": "leonsTheme-navy",
          "color": "#063970",
          "name": "navy"
        },
        {
          "slug": "leonsTheme-off-white",
          "color": "#fcfcfa",
          "name": "off-white"
        }
      ]
    },

    "typography": {
      "fontFamilies": [{
        "fontFamily": "'Inter', sans-serif",
        "slug": "inter",
        "name": "Body-Inter",
        "fontFace": [
          {
            "fontFamily": "'Inter', sans-serif",
            "fontWeight": "300",
            "fontStyle": "normal",
            "fontStretch": "normal",
            "src": ["file:./assets/fonts/inter/Inter-Light.ttf"]
          },
          {
            "fontFamily": "'Inter', sans-serif",
            "fontWeight": "400",
            "fontStyle": "normal",
            "fontStretch": "normal",
            "src": ["file:./assets/fonts/inter/Inter-Regular.ttf"]
          }
        ]
      },
      {
        "fontFamily": "Stolzl, Arial, sans-serif",
        "slug": "stolzl",
        "name": "Headings - Stolzl"
      }
    ],
    "fontSizes": [
      {
        "slug": "small",
        "size": "0.64rem",
        "name": "Small"
      },
      {
        "slug": "medium",
        "size": "0.8rem",
        "name": "Medium"
      },
      {
        "slug": "regular",
        "size": "1rem",
        "name": "Regular"
      }
    ]
    },
    
    "custom": {
      "typography": {
        "font-size": {
          "heading-1": "clamp(2.113rem, 1.9252rem + 0.9390000000000001vw, 3.052rem"
        }
      }
    },

    "spacing": {
      "padding": true,
      "margin": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },

    "border": {
      "radius": true,
      "color": true,
      "style": true,
      "width": true
    }
  },

  "styles": {
    "color": {
      "background": "var(--wp--preset--color--leons-theme-off-white)",
      "text": "var(--wp--preset--color--leons-theme-navy)"
    },

    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "lineHeight": "1.75", 
      "fontSize" : "1rem"
    },

    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--stolzl)",
          "fontWeight": "800",
          "lineHeight": "1.3",
          "fontSize": "var(--wp--custom--typography--font-size--heading-1)"
        }
      }
    },

    "blocks": {
      "core/button":{
        "border": {
          "color": "currentColor",
          "radius": "0px"
        },
        "color": {
          "background": "var(--wp--preset--color--leons-theme-gray)",
          "text": "var(--wp--preset--color--leons-theme-white)"
        },
        "spacing": {
          "padding": {
            "top": "0.7em",
            "right": "1.6em",
            "bottom": "0.7em",
            "left": "1.6em"
          }
        },
        "typography": {
          "fontSize": "va(--wp--preset--font-size--regular)",
          "lineHeight": "var(--wp--custom--line-height--normal)"
        }
      }
    }
  },
    "templateParts": [
      {
        "name": "header",
        "area": "header",
        "title": "header"
      },
      {
        "name": "footer",
        "area": "footer",
        "title": "footer"
      }
    ]
}